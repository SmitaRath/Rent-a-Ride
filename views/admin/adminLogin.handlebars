<section id="loginsection-id">

    <h1>Login</h1>
<div>
    <form id="loginform-id"  class="gjh" method="POST" action="/admin/homePage">
            <label>
            Username
            <input id="email-id" name="name" placeholder="Username" value="{{users.name}}" required>
            </label>
            <br><br>
            <label>
                Password
            <input id="password-id" name="password" type="password"  placeholder="password" required>
            </label>
            <br>
            <br>
            <button type=submit>Login</button>
        

    <div id="errorlist-id" class="error">
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}
    </div>
    </form>
</div>



</section>

